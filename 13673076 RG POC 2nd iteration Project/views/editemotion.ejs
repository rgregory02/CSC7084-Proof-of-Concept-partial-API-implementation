                                                                                <script>
                                                                                    // Get all slider elements
                                                                                    const sliders = document.querySelectorAll('input[type="range"]');

                                                                                    // Add event listener for each slider
                                                                                    sliders.forEach(slider => {
                                                                                        // Get elements related to this slider
                                                                                        const parentDiv = slider.parentElement;
                                                                                        const minValue = parentDiv.querySelector('.minValue');
                                                                                        const maxValue = parentDiv.querySelector('.maxValue');
                                                                                        const currentValue = parentDiv.querySelector('.currentValue');

                                                                                        // Update values on input change
                                                                                        slider.addEventListener('input', function () {
                                                                                            currentValue.textContent = this.value;
                                                                                        });

                                                                                        // Initial update of min and max values
                                                                                        minValue.textContent = slider.min;
                                                                                        maxValue.textContent = slider.max;
                                                                                    });

