                                                                                                    label: 'Emotion Levels',
                                                                                                    data: ["<%= summaryenjoyment %>", "<%= summarysadness %>", "<%= summaryanger %>", "<%= summarycontempt %>", "<%= summarydisgust %>", "<%= summaryfear %>", "<%= summarysurprise %>"],
                                                                                                    backgroundColor: getRandomColor(),
                                                                                                    borderColor: getRandomColor(),
                                                                                                    borderWidth: 3
                                                                                                }]
                                                                                            };

                                                                                            // Define radar chart options
