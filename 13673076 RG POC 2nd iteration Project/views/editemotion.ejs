                                                                                        function initRadarChart() {
                                                                                            // Get the canvas element
                                                                                            const ctx = document.getElementById('snapshotChart').getContext('2d');

                                                                                            // Define radar chart data
                                                                                            const data = {
                                                                                                labels: ['Enjoyment', 'Sadness', 'Anger', 'Contempt', 'Disgust', 'Fear', 'Surprise'],
