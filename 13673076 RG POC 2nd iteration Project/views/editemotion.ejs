                                                                                                scale: {
                                                                                                    ticks: {
                                                                                                        beginAtZero: true,
                                                                                                        max: 10.00// Set maximum value for the scale
                                                                                                    }
                                                                                                }
                                                                                            };

                                                                                            // Create radar chart
                                                                                            const myRadarChart = new Chart(ctx, {
                                                                                                type: 'radar',
                                                                                                data: data,
                                                                                                options: options
                                                                                            });
                                                                                        }
                                                                                        function getRandomColor() {
                                                                                            return 'rgba(' + Math.floor(Math.random() * 256) + ',' +
                                                                                                Math.floor(Math.random() * 256) + ',' +
                                                                                                Math.floor(Math.random() * 256) + ',' +
                                                                                                0.5 + ')'; // Change the alpha value (0.5) for transparency
                                                                                        }
                                                                                        // Call the function to initialize and update radar chart
                                                                                        initRadarChart();
                                                                                    </script>
